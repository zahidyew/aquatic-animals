<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".markerAR.AugmentedImageActivity">


    <fragment android:name="com.example.aquaticanimals.markerAR.AugmentedImageFragment"
        android:id="@+id/ux_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


  <ImageView
      android:id="@+id/image_view_fit_to_scan"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:scaleType="fitCenter"
      android:src="@drawable/fit_to_scan"
      android:contentDescription="Fit image to scan"
      />

</FrameLayout>
