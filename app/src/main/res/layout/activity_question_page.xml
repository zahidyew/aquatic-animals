<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#ececec"
    tools:context=".questions.QuestionPage">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:id="@+id/oneCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/minuteElem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="305dp"
                android:textColor="#000000"
                android:hint="Mins"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/quesElem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/minuteElem"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:hint="Question Here"/>

            <TextView
                android:id="@+id/choiceElemA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/quesElem"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#000000"
                android:hint="A."
                android:clickable="true"/>

            <TextView
                android:id="@+id/choiceElemB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/choiceElemA"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#000000"
                android:hint="B."
                android:clickable="true"/>

            <TextView
                android:id="@+id/choiceElemC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/choiceElemB"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#000000"
                android:clickable="true"/>

            <TextView
                android:id="@+id/choiceElemD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/choiceElemC"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#000000"
                android:clickable="true"/>

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choiceElemD"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Next"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choiceElemD"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Back"
                android:visibility="invisible"
                android:textAllCaps="false"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>