                android:id="@+id/field6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text="Hi something here"
                android:layout_below="@id/field5"
                android:layout_toRightOf="@id/header6"/>

            <TextView
                android:id="@+id/header7"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="5dp"
                android:text="Conservation Status"
                android:layout_below="@+id/header6" />
            <TextView
                android:id="@+id/field7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text="Hi something here"
                android:layout_below="@id/field6"
